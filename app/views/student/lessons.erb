<h1>Your Lessons</h1>
<%= @user.name %>
<hr>
<% if @user.lessons.empty? %>
  <h3>No Lessons</h3>
<% else %>  
  <% @user.lessons.reverse.each do |lesson| %>
  <a href="/student/<%= @user.id %>/lesson/<%= lesson.id %>">
    <div>
      <h4><%= lesson.date %></h4>
      <h3><%= lesson.name %></h3>
      <h5>Status: <%= lesson.status %></h5>
    </div>
  </a>
  <% end %>
<% end %>  
<hr>
<br>
<a href="/logout">Log Out</a>
<a href="/student/<%= @user.id %>/edit">Edit Account</a>